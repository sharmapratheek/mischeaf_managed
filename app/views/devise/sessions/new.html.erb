<% content_for :header do %>
  <section class="hero is-warning">
    <div class="hero-body ">
      <div class="container">
        <h1 class="title">Log In</h1>
      </div>
    </div>
  </section>
<% end %>



<div class="columns is-centered">
  <div class="column is-4">
    <br>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" },input_html: {class: "input"},wrapper: false,label_html: {class: "label"} %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" },input_html: {class: "input"},wrapper: false,label_html: {class: "label"}  %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in",class: "button is-warning" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>    
  </div>
</div>
