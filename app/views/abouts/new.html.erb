<div class="columns">
	<div class="column is-8 is-centered">
		<div>	
			<br>
			<%= simple_form_for @about,html: {multipart: true} do |f|%>
				<% f.error_notification %>
				<div class="columns">
					<div class="field column is-9">
						<div class="control">
						<label class="label title ">THE STORY</label>	
						<%= f.input :title1 ,required:true, input_html: { class: "input"}, wrapper: false, label_html: { class:"label" } %>
						</div>	
					</div>
				</div>
				<div class="columns">
					<div class="field column">
						<div class="control">	
						<%= f.input :description1 ,required:true, input_html: { class: "textarea"}, wrapper: false, label_html: { class:"label" }%>
						</div>
					</div>
				</div>
				<br><br>
				<div class="columns">
					<div class="field column is-9">
						<div class="control">
						<label class="label title ">THE VISION</label>								
						<%= f.input :title2 ,required:true, input_html: { class: "input"}, wrapper: false, label_html: { class:"label" } %>
						</div>	
					</div>
				</div>
				<div class="columns">
					<div class="field column">
						<div class="control">	
						<%= f.input :description2 ,required:true, input_html: { class: "textarea"}, wrapper: false, label_html: { class:"label" }%>
						</div>
					</div>
				</div>
				<div class="columns">					
					<div class="field column">
			          <div class="control">
			            <label class="label">Add images</label>
			              <div class="file">
			              <label class="file-label">
			                <%= f.input :about_image, as: :file, input_html: { class:"file-input instrument-image" }, label: false, wrapper: false %>
			                  <span class="file-cta">
			                    <span class="file-icon"><i class="fa fa-upload"></i></span>
			                    <span class="file-label">Choose a fileâ€¦</span>
			                  </span>
			              </label>
			              </div>
			            </div>
			          </div>					
				</div>
				<hr>

					<div class="field is-grouped">
			        	<div class="control">
			            	<%= f.button :submit, class: 'button is-warning' %>
			            	<%= link_to 'Cancel', root_path, class:'button is-light' %>
			          	</div>
			        </div>

			<% end %>
		</div>
	</div>
</div>