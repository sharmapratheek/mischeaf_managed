<% content_for :header do%>
  <section class="hero is-warning">
    <div class="hero-body">
      <div class="container">
        <h1 class="title">Sign up </h1>
      </div>
    </div>
  </section>
<% end %>



<div class="columns is-centered">
  <div class="column is-4">
    <br>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true ,
                    input_html: { autocomplete: "email" },input_html: {class:"input"},wrapper: false,label_html: {class:"label"}%>
            <%= f.input :name,
                    required: false,
                    autofocus: true ,
                    input_html: { autocomplete: "email" },input_html: {class:"input"},wrapper: false,label_html: {class:"label"}%>
        <%= f.input :password,
                    required: false,
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { autocomplete: "new-password" } ,input_html: {class:"input"},wrapper: false,label_html: {class:"label"}%>
        <%= f.input :password_confirmation,
                    required: false,
                    input_html: { autocomplete: "new-password" } ,input_html: {class:"input"},wrapper: false,label_html: {class:"label"}%>
      </div>
    <br>
      <div class="form-actions">
        <%= f.button :submit, "Sign up" ,class: "button is-warning"%>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
    
  </div>
</div>
