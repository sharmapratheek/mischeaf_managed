<div class="columns">
	<div class="column is-8 is-centered">
		<div>	
			<br>
			<%= simple_form_for @box,html: {multipart: true} do |f|%>
				<div class="columns">
					<div class="field column is-9">
						<div class="control">
						<%= f.input :title ,required:true, input_html: { class: "input"}, wrapper: false, label_html: { class:"label" } %>
						</div>	
					</div>
					<div class="field column">
						<div class="control">	
						<%= f.input :price ,required:true, input_html: { class: "input"}, wrapper: false, label_html: { class:"label" }%>
						</div>
					</div>
				</div>
					<div class="field column">
						<div class="control">	
						<%= f.input :model ,required:true, input_html: { class: "input"}, wrapper: false, label_html: { class:"label" }%>
						</div>
					</div>
					<div class="field column">
						<div class="control">	
						<%= f.input :description ,required:true, input_html: { class: "textarea"}, wrapper: false, label_html: { class:"label" }%>
						</div>
					</div>
					<div class="columns">
						<div class="column is-3">
							<div class="control">
				              <label class="label">Brand</label>
								<%= f.input_field :brand,collection: Box::BRAND,prompt: "Select Brand" %>
							</div>
						</div>
					
					
						<div class="column is-3">
							<div class="control">
				              <label class="label">Finish</label>
								<%= f.input_field :finish,collection: Box::FINISH ,prompt: "Select Finish"%>								
							</div>
						</div>
					</div>					
					
					<div class="field">
			          <div class="control">
			            <label class="label">Add images</label>
			              <div class="file">
			              <label class="file-label">
			                <%= f.input :image, as: :file, input_html: { class:"file-input instrument-image" }, label: false, wrapper: false %>
			                  <span class="file-cta">
			                    <span class="file-icon"><i class="fa fa-upload"></i></span>
			                    <span class="file-label">Choose a fileâ€¦</span>
			                  </span>
			              </label>
			              </div>
			            </div>
			          </div>					
					
					<hr>
					<div class="field is-grouped">
			        	<div class="control">
			            	<%= f.button :submit, class: 'button is-warning' %>
			            	<%= link_to 'Cancel', boxes_path, class:'button is-light' %>
			          	</div>
			        </div>

			<% end %>
		</div>
	</div>
</div>